#!/usr/bin/env ruby

require "rubygems"
require "bundler/setup"

require 'logger'
require 'backports'
require_relative '../lib/git-process/git-to-master-options'
require_relative '../lib/git-process/git-process'

options = Git::Process::ToMasterOptions.new(ARGV)

gp = Git::Process.new('.', :log_level => options.log_level)

begin
  gp.rebase_to_master
rescue Git::Process::GitProcessError => exp
  puts exp.message
  exit(-1)
end
